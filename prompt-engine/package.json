{
  "name": "@eprompt/prompt-engine",
  "version": "1.0.0",
  "description": "Prompt generation and refinement backend for ePrompt.",
  "main": "dist/engine/index.js",
  "types": "dist/engine/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/engine/index.js",
      "require": "./dist/engine/index.js",
      "types": "./dist/engine/index.d.ts"
    }
  },
  "scripts": {
    "dev": "nodemon --exec ts-node src/server.ts",
    "build": "tsc --project tsconfig.build.json",
    "start": "node dist/server.js",
    "test": "jest --config jest.config.js --runInBand",
    "test:watch": "jest --config jest.config.js --watch",
    "test:coverage": "jest --config jest.config.js --coverage",
    "test:e2e": "jest --config jest.config.js --testPathPattern=e2e",
    "test:unit": "jest --config jest.config.js --testPathPattern=unit",
    "test:integration": "jest --config jest.config.js --testPathPattern=integration",
    "clean": "rimraf dist",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "example": "ts-node examples/basic-usage.ts"
  },
  "keywords": [
    "prompt",
    "engine",
    "generation",
    "refinement",
    "express",
    "typescript"
  ],
  "author": "ePrompt Team",
  "license": "MIT",
  "dependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.21",
    "@types/handlebars": "^4.0.40",
    "@types/jest": "^30.0.0",
    "@types/mongoose": "^5.11.96",
    "@types/node": "^20.0.0",
    "@types/supertest": "^6.0.3",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "formidable": "^3.5.4",
    "handlebars": "^4.7.8",
    "jest": "^30.0.4",
    "mongoose": "^8.16.3",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "ts-jest": "^29.4.0",
    "typescript": "^5.4.5"
  },
  "devDependencies": {
    "nodemon": "^3.1.0",
    "supertest": "^7.1.3",
    "ts-node": "^10.9.2"
  }
}
